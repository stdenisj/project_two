<main>
	<h2>List of Cakes</h2>
	<div class="container">
		<div class="row">

			{{#each cakes }}
        	<div class="col">
					<a href="/cakes/{{ id }}">
                        <img src="{{ img }}" height="200px" >
                    </a>
					<h3>   <a href="cakes/{{ id }}">{{ name }}</a>   </h3>
        	</div>
			{{/each}}
        	<div>
		    	<a href="cakes/new">Add New Cake</a>
			</div>
        </div>
	</div>
</main>
