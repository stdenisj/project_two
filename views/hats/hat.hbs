<main>
    <h2>{{ hat.name }}</h2>

    <div class="container">
        <div class="row">
            <div class="col">
                <img src="{{hat.img}}" height="500px">
            </div>

            <div class="col">
        
                <p>Color: {{hat.color}}</p>

                <p>Size: {{hat.size}}</p>

                <p>Price: ${{hat.price}}</p>
        
                <p>Quantity Available: {{hat.qty}}</p>

                
            </div>
        
        </div>

    </div>

</main>

<footer>
                <form action="/hats/{{ hat.id }}?_method=DELETE" method="POST">
			    <input type="submit" value="Delete"/>
		        </form>
                
                <a href="/hats/{{ hat.id }}/edit">Edit</a>
</footer>