<main>
    <h2><a href="/{{item.category}}s">Back to {{ item.category }}s</a></h2>

    <div class="container-fluid">
        <div class="row">
            <div class="col text-center col-sm-6 col-md-4">
                <img src="{{item.img}}" height="500px">
            </div>

            <div class="col text-center col-sm-6 col-md-4">
                {{#if item.description}}
                    <p>Description: {{ item.description }}</p>
                {{/if}}


                {{#if item.isVegan}}
                <p>This cake is vegan</p>
                {{/if}}
        
                {{#if item.color}}
                    <p>Color: {{item.color}}</p>
                {{/if}}

                {{#if item.size}}
                    <p>Size: {{item.size}}</p>
                {{/if}}

                <p>Price: ${{item.price}}</p>

                <p>Quantity Available: {{item.qty}}</p>

        {{#if admin}}
            {{#if canBuy }}
				<form action="/{{item.category}}s/{{ item.id }}/buy?_method=PUT" method="POST">
					<input type="submit" value="Buy now!"/>
				</form>
			{{/if}}
            {{#if admin.isAdmin}}
                <form action="/{{item.category}}s/{{ item.id }}?_method=DELETE" method="POST">
			        <input type="submit" value="Delete"/>
		        </form>
                <form action="/{{item.category}}s/{{ item.id }}/edit" method="GET">
                    <input type="submit" value="Edit">
                </form>
            {{/if}}
        {{/if}}
            </div>
        
        </div>

    </div>

</main>