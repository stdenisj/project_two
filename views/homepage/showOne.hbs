<main>
    <h2><a href="/{{ item.category }}s">Back to {{ item.category }}s</a></h2>

    <div class="container-fluid">
        <div class="row">
            <div class="col text-center col-sm-6 col-md-4">
                <img src="{{ item.img }}" height="500px">
            </div>

            <div class="col text-center col-sm-6 col-md-4">
                <p>{{ item.name }}</p>

                {{#if item.description}}
                    <p>Description: {{ item.description }}</p>
                {{/if}}


                {{#if item.isVegan}}
                <p>This cake is vegan</p>
                {{/if}}
        
                {{#if item.color}}
                    <p>Color: {{ item.color }}</p>
                {{/if}}

                {{#if item.size}}
                    <p>Size: {{ item.size }}</p>
                {{/if}}

                <p>Price: ${{ item.price }}</p>

                <p>Quantity Available: {{ item.qty }}</p>
        <div class="row">
        {{#if user}}
            {{#if canBuy }}
            <div class="col">
				<form action="/{{ item.category }}s/{{ item.id }}/buy?_method=PUT" method="POST">
					<input type="submit" class="btn btn-outline-success" value="Buy now!"/>
				</form>
            </div>
			{{/if}}
            {{#if user.isAdmin}}
            <div class="col">
                <form action="/{{ item.category }}s/{{ item.id }}?_method=DELETE" method="POST">
			        <input type="submit" class="btn btn-outline-danger" value="Delete"/>
		        </form>
            </div>
            <div class="col">
                <form action="/{{ item.category }}s/{{ item.id }}/edit" method="GET">
                    <input type="submit" class="btn btn-outline-warning" value="Edit">
                </form>
            </div>
            {{/if}}
        {{/if}}
            </div>
        </div>
        </div>

    </div>

</main>