<main>
    <h2><a href="/{{item.category}}s">{{ item.name }}</a></h2>

    <div class="container">
        <div class="row">
            <div class="col">
                <img src="{{item.img}}" height="500px">
            </div>

            <div class="col text-center">
                {{#if item.description}}
                    <p>Description: {{ item.description }}</p>
                {{/if}}


                {{#if item.isVegan}}
                <p>This cake is vegan</p>
                {{/if}}
        
                {{#if item.color}}
                    <p>Color: {{item.color}}</p>
                {{/if}}

                {{#if item.size}}
                    <p>Size: {{item.size}}</p>
                {{/if}}

                <p>Price: ${{item.price}}</p>

                <p>Quantity Available: {{item.qty}}</p>

                <form action="/{{item.category}}s/{{ item.id }}?_method=DELETE" method="POST">
			        <input type="submit" value="Delete"/>
		        </form>
                <form action="/{{item.category}}s/{{ item.id }}/edit" method="GET">
                    <input type="submit" value="Edit">
                </form>
                
            </div>
        
        </div>

    </div>

</main>